<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:enableOnBackInvokedCallback="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.VKR"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.profile.authorization.RegistrationActivity"
            android:label="Регистрация"/>
        <activity android:name=".ui.profile.addVacancy.AddVacancyActivity"
            android:label="Добавление вакансии"/>
        <activity android:name=".ui.profile.authVacancies.AuthDetailVacancyActivity"
            android:label="Просмотр вакансии"/>
        <activity android:name=".ui.search.VacancyPlaceActivity"
            android:label="Вакансия"/>
        <activity android:name=".ui.profile.authVacancies.AuthUpdateVacancyActivity"
            android:label="Изменение вакансии"/>
        <activity android:name=".ui.profile.settings.SettingsActivity"
            android:label="Настройки"/>
        <activity android:name=".ui.profile.settings.ChangeProfileActivity"
            android:label="Изменение профиля"/>
        <activity android:name=".ui.profile.authVacancies.AuthVacanciesActivity"
            android:label="Мои вакансии"/>
        <activity android:name=".ui.profile.authorization.AuthActivity"
            android:label="Вход"/>
        <activity android:name=".ui.profile.resume.AddResumeActivity"
            android:label="Добавление резюме"/>
        <activity android:name=".ui.profile.resume.ResumeActivity"
            android:label="Резюме"/>
        <activity android:name=".ui.profile.resume.DetailResumeActivity"
            android:label="Резюме"/>
        <activity android:name=".ui.profile.resume.UpdateResumeActivity"
            android:label="Изменение резюме" />
        <activity android:name=".ui.search.ReplyResumeActivity"
            android:label="Откликнуться"/>
        <activity android:name=".ui.profile.authVacancies.DetailResumeToVacancyActivity"
            android:label="Резюме"/>

    </application>

</manifest>