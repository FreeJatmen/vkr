<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_vacancy"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/name_vacancy_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Вакансия"
        android:maxLength="100" />

    <EditText
        android:id="@+id/payment_vacancy_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Зарплата"
        android:maxLength="50"
        android:layout_below="@id/name_vacancy_input" />

    <EditText
        android:id="@+id/expertise_vacancy_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Опыт работы"
        android:maxLength="50"
        android:layout_below="@id/payment_vacancy_input" />

    <EditText
        android:id="@+id/employment_vacancy_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Место работы"
        android:maxLength="50"
        android:layout_below="@id/expertise_vacancy_input" />

    <EditText
        android:id="@+id/description_vacancy_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание работы"
        android:maxLength="2000"
        android:layout_below="@id/employment_vacancy_input" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description_vacancy_input" />
</RelativeLayout>
</ScrollView>