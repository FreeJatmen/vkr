<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vacancy_detail_swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/name_detail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вакансия"
                android:textSize="24sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/payment_detail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зарплата"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/expertise_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Требуемый опыт работы: "
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/expertise_detail_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Опыт работы"
                    android:layout_gravity="right"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/employment_detail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Место работы"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание"
                android:textSize="24sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/description_detail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Описание работы"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/update_vacancy_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Изменить вакансию" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Удалить вакансию"
                android:backgroundTint="@color/red"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resume_vacancy_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>