<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_update_resume"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/name_resume_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Имя"
        android:maxLength="50" />

    <EditText
        android:id="@+id/surname_resume_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Фамилия"
        android:maxLength="50" />

    <EditText
        android:id="@+id/resumeName_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название резюме\n(Будет отображаться у работодателя)"
        android:maxLength="50" />

    <EditText
        android:id="@+id/contacts_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Контакты"
        android:maxLength="50" />

    <EditText
        android:id="@+id/skills_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Навыки"
        android:maxLength="500" />

    <EditText
        android:id="@+id/about_yourself_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="О себе"
        android:maxLength="2000" />

    <Button
        android:id="@+id/update_resume_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Применить"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/cansel_update_resume_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
</ScrollView>